<div class="container p-4">
    <dir = "row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/contacto" method="POST">
                        <h1>contactanos</h1>
                        <div class="form-group">
                            <h5>Nombre Completo <span style="color: red;">*</span></h5>
                            <input type="text" name="nombre_comentario" id= "nombre_comentario" placeholder="Nombre Completo:" required="true" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <h5>Telefono<span style="color: red;">*</span></h5>
                            <input type="text" name="telefono_comentario" id= "telefono_comentario" placeholder="Telefono:" required="true" class="form-control">
                        </div>
                        <div class="form-group">
                            <h5>Correo Electronico <span style="color: red;">*</span></h5>
                            <input type="email" name="mail_comentario" id="mail_comentario" placeholder="correo: ejemplo@mail.com" required = "true" class="form-control">
                        </div>
                        <div class="form-group">
                            <h5>Mensaje<span style="color: red;">*</span></h5>
                            <textarea name="mensaje_comentario"  rows="8" required = "true" class="form-control" placeholder="Mensaje"></textarea>
                        </div>
                        <div class="form-group">
                            <br>
                            <button class="btn btn-dark btn-block" style="height: 100%; width: 100%;">
                                Enviar Mensaje
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </dir>
</div>